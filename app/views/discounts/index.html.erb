<!-- Page Content -->
    <h1>Descuentos</h1>
    
    <div class="container">

      <!-- Page Heading -->
      <% @discounts.each do |discount| %>
      <hr />
      <!-- Project One -->
      <div class="row">
        <div class="col-md-7">
          <a href="#">
            <%= image_tag(discount.avatar.url, class: "img-responsive") if discount.avatar? %>
          </a>
        </div>
        <div class="col-md-5">
          <h3><%= discount.title %></h3>
          <h2>$<%= discount.price %>.-</h2>
          <%= link_to "Aplicar descuento", discount, :class => "btn btn-warning" %>
        </div>
      </div>
      
      <% end %>
      <!-- /.row -->

      <hr>
    </div>